<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="VENIK" Height="500" Width="800" ResizeMode="NoResize" Icon="/data-cleaning.png">
    <Grid Margin="0,0,0,0">
        <ScrollViewer x:Name="selectScroll" Margin="0,132,650,10" Background="LightGray">
            <StackPanel>
                <Label Content="System" Background="#FFBFBFBF" FontSize="9"/>
                <CheckBox Width="100" x:Name="clear_tmp_chk" Content="Temporary" FontStyle="Italic"/>
                <CheckBox Width="100" x:Name="clear_recycle" Content="Recycle Bin" FontStyle="Italic"/>
                <CheckBox Width="100" x:Name="clear_windows_logs" Content="Windows Logs" FontStyle="Italic"/>
                <CheckBox Width="100" x:Name="clear_web_cache" Content="Web Cache" FontStyle="Italic"/>

                <Label Content="Downloads" Background="#FFBFBFBF" FontSize="9"/>
                <CheckBox Width="100" x:Name="clear_downloads_exe" Content="Apps" FontStyle="Italic"/>
                <CheckBox Width="100" x:Name="clear_downloads_music" Content="Music" FontStyle="Italic"/>
                <CheckBox Width="100" x:Name="clear_downloads_video" Content="Video" FontStyle="Italic"/>
                <CheckBox Width="100" x:Name="clear_downloads_images" Content="Images" FontStyle="Italic"/>
                <CheckBox Width="100" x:Name="clear_downloads_torrents" Content="Torrents" FontStyle="Italic"/>
                <CheckBox Width="100" x:Name="clear_downloads_archive" Content="Archives" FontStyle="Italic"/>

                <Label Content="Other" Background="#FFBFBFBF" FontSize="9"/>
                <CheckBox Width="100" x:Name="clear_custom_folder_chk" Content="Custom folder" FontStyle="Italic" IsChecked="False"/>
                <Button x:Name="change_custom_folder" Content="Change" HorizontalAlignment="Center" Height="15" FontSize="9" Background="#FFBBBBBB" Click="btn_change_custom_folder"/>
            </StackPanel>
        </ScrollViewer>

        <Grid Margin="155,132,10,10">
            <ScrollViewer x:Name="logScroll" Height="275" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <TextBox x:Name="logs"  Text="Logs" TextWrapping="Wrap" Background="LightGray" IsReadOnly="True"/>
            </ScrollViewer>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="25">
                <Button x:Name="clean" Content="Clean" HorizontalAlignment="Right" Height="25" Width="85" Cursor="Hand" VerticalAlignment="Bottom" Click="btn_clean"/>
                <ProgressBar x:Name="statusBar" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0, 0, 90, 0"></ProgressBar>
            </Grid>
            
        </Grid>
        <Grid Margin="10,10,10,357">
            <Image HorizontalAlignment="Left" Height="100" Width="100"  Source="/data-cleaning.png"/>
            <Label Content="VENIK" Height="50" Width="180" Margin="-310,0,0,30" FontSize="43" FontFamily="Bahnschrift" VerticalContentAlignment="Stretch"/>
            <Label Content="by reallyShould" Height="25" Width="100" Margin="-390,40,0,0" FontFamily="Bahnschrift" Background="{x:Null}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
        
    </Grid>
</Window>
